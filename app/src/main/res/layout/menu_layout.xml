<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_comida"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/capusha"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/capusha"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <ListView
        android:id="@+id/listViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTituloMenu"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/botonentrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a DirecciÃ³n de Entrega"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
